import shutil
from flask import Flask
from flask_bootstrap import Bootstrap
import requests
import json
from PIL import Image
import urllib


app = Flask(__name__)
Bootstrap(app)
@app.route('/')
def create_app():

    print(app)

    return returned_dict

def get_dogs():

    url = "https://dog.ceo/api/breeds/list/all"

    dogRequest1 = requests.get(url) #uses request module to access the url provided above

    dogs = dogRequest1.json()

    return dogs.get("message")

def get_dog_images():
    imageUrl = "https://dog.ceo/api/breed/hound/images/random"

    dog_request = requests.get(imageUrl)  #Here I get it from the web

    #print(dog_request.json())

    dog_image = dog_request.json()["message"]

    print(dog_image) #prings image within the compiler

    return dog_image

if __name__ == '__main__':

    returned_dict = get_dogs()

    create_app()

    get_dog_images()

    app.run(host="0.0.0.0", debug=True, port=5000)
